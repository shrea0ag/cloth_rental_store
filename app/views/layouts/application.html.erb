<!DOCTYPE html>
<html>
  <head>
    <title>ClothRentalStore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <header class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
          <nav>
            <ul class="nav navbar-nav navbar-right">
              <% if borrower_signed_in? %>
                <li><%= link_to 'Log out', destroy_borrower_session_path, method: :delete %></li>
                <li><%= link_to 'Edit_details' , edit_borrower_registration_path, method: :get %></li>
              <% end %>
              <% if borrowee_signed_in? %>
                <li><%= link_to 'Log out', destroy_borrowee_session_path, method: :delete %></li>
                <li><%= link_to 'Edit_details' , edit_borrowee_registration_path, method: :get %></li>
              <% end %>
            </ul>
          </nav>
        </div>
      </header>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>


