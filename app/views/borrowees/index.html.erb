<table class = "table">
  <tr>
	  <th> Name: </th>
		<th> Size: </th>
		<th> Color: </th>
		<th> price_per/hour: </th>
		<th> price_per/day: </th>
  </tr>
  <% @borrowees.each do |borrowee| %>
  	<% borrowee.products.each do |product| %>
	    <tr>
	      <td><%= product.name %></td>
	      <td><%= product.size %></td>
	      <td><%= product.color %></td>
	      <td><%= product.priceph %></td>
	      <td><%= product.pricepd %></td>
	      <td><%= link_to 'Destroy', product ,
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>

    	</tr>
	  <% end %>
  <% end %>
 </table>
