<h1>Add Products</h1>
<div class="container">
	<%= form_with scope: :product, url: products_path, local: true do |f| %> 

		<%= f.label :name , class: "form_label"%>
		<%= f.text_field :name, class: "form_text"%>
		<br>
		<br>
		<%= f.label :size, class: "form_label"%> <br>
		<%= f.check_box :size_s%>
		<%= f.label(:xs, "Xtra-Small") %>
		<%= f.check_box :size_xs%>
		<%= f.label(:s, "Small") %>
		<%= f.check_box :size_m %>
		<%= f.label(:m, "Medium") %>
		<%= f.check_box :size_l %>
		<%= f.label(:l, "Large") %>
		<%= f.check_box :size_xl %>
		<%= f.label(:xl, "Xtra-Large") %>
		<br>
		<br>
		<%= f.label :color, class: "form_label" %>
		<%= f.text_field :color, class: "form_text" %>
		<br>
		<br>
		<%= f.label :priceph, class: "form_label" %>
		<%= f.text_field :priceph, class: "form_text" %>
		<br>
		<br>
		<%= f.label :pricepd, class: "form_label" %>
		<%= f.text_field :priceph, class: "form_text" %>
		<br>
		<br>
		<%= f.submit %>
		
	<% end %> 
</div>