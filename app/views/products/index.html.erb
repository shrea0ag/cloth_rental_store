<% @products.each do |product| %>
  <p><%= product.name %></p>
  <p><%= product.size %></p>
  <p><%= product.color %></p>
  <p><%= product.priceph %></p>
  <p><%= product.pricepd %></p>
  <%= form_for @order_item do |f| %>
  <%= f.hidden_field :product_id , value: product.id %>
    <% product.size.split(',').each do |size| %>
      <%= f.radio_button(:size, size) %>
      <%= f.label(:size, size) %>
    <% end %>
    <%= f.number_field :quantity %>
    <%= f.label        :quantity %>
    <% product.color.split(',').each do |color| %>
      <%= f.radio_button(:color, color) %>
      <%= f.label(:color, color) %>
    <% end %>
    <%= f.submit "Rent now" %>
  <% end %>

<% end %>